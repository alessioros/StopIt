<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        android:title="@string/title"
        android:titleTextColor="@color/white"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>


    <fragment android:name="it.polimi.stopit.LoginFragment"
        android:id="@+id/article_fragment"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        tools:layout="@layout/fb"
        android:layout_below="@+id/view"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="75dp"/>

    <fragment android:name="it.polimi.stopit.TwitterLogin"
        android:id="@+id/twitter_fragment"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        tools:layout="@layout/twitter_login"
        android:layout_below="@+id/view"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:id="@+id/imageView"
        android:src="@drawable/stopitsymbol"
        android:layout_marginTop="50dp"
        android:layout_above="@+id/textView"
        android:layout_centerHorizontal="true" />

    <TextView android:text="StopIt!" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:id="@+id/textView"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/article_fragment"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-regular"
        android:textColor="#000000" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:id="@+id/view"
        android:layout_marginTop="300dp"
        android:layout_alignStart="@+id/toolbar" />

</RelativeLayout>
